<!DOCTYPE html>
<html>
<head>
  <title>Book List</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background: linear-gradient(to bottom right, #a5ee9e, #66baf1);
    }
  </style>

</head>
<body>
  
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/books">Books</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/books">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/books">All Books</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/books/-/new">Add Book</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">

    <a href="/books/-/new" class="btn btn-primary mt-4">Add New Book</a>

    <% if (books && books.length > 0) { %>
      <h1 class="mt-4">Book List</h1>
      <div class="row">
        <% books.forEach((book) => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= book.image %>" height="200" class="card-img-top" alt="<%= book.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text">Author: <%= book.author %></p>
                <a href="/books/<%= book._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No books found.</p>
    <% } %>
  </div>
</body>
</html>
